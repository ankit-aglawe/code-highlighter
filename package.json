{
  "name": "code-highlighter",
  "displayName": "Code Highlighter",
  "description": "Easily highlight and manage important sections of your code in Visual Studio Code.",
  "version": "1.0.0",
  "publisher": "ankit-aglawe",
  "repository": {
    "type": "git",
    "url": "https://github.com/ankit-aglawe/code-highlighter.git"
  },
  "engines": {
      "vscode": "^1.50.0"
  },

  
  "categories": [
      "Other"
  ],
  "activationEvents": [
      "*"
  ],
  "main": "./extension.js",
  "scripts": {
      "vscode:prepublish": "tsc -p ./",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
      "@types/node": "^14.14.6",
      "typescript": "^4.0.3",
      "vscode": "^1.1.37"
  },
  "dependencies": {},
  "contributes": {
      "commands": [
          {
              "command": "extension.highlightCode",
              "title": "Highlight Code"
          },
          {
              "command": "extension.removeHighlight",
              "title": "Remove Highlight"
          },
          {
              "command": "extension.changeHighlightColor",
              "title": "Change Highlight Color"
          },
          {
              "command": "extension.searchHighlights",
              "title": "Search Highlights"
          }
      ],
      "keybindings": [
          {
              "command": "extension.highlightCode",
              "key": "ctrl+alt+h",
              "when": "editorTextFocus"
          },
          {
              "command": "extension.removeHighlight",
              "key": "ctrl+alt+e",
              "when": "editorTextFocus"
          },
          {
              "command": "extension.changeHighlightColor",
              "key": "ctrl+alt+c",
              "when": "editorTextFocus"
          },
          {
              "command": "extension.searchHighlights",
              "key": "ctrl+alt+s",
              "when": "editorTextFocus"
          }
      ],
      "configuration": {
          "type": "object",
          "title": "Code Highlighter",
          "properties": {
              "highlightSettings.useSingleColor": {
                  "type": "boolean",
                  "default": false,
                  "description": "When enabled, all highlights will use the first color in the list."
              },
              "highlightSettings.customColors": {
                  "type": "array",
                  "items": {
                      "type": "string"
                  },
                  "default": [],
                  "description": "Custom highlight colors (in rgba format)."
              }
          }
      }
  }
}
